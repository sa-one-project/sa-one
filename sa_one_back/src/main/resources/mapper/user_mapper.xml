<mapper namespace="com.korit.sa_one_back.mapper.UserMapper">

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="userId">
        insert into user_tb(
            user_id,
            username,
            password,
            oauth2_id,
            provider,
            name,
            phone,
            email,
            img_url,
            img_path,
            role_id,
            created_at,
            updated_at,
            gender,
            birth_date
        ) values (
            default,
            #{username},
            #{password},
            #{oauth2Id},
            #{provider},
            #{name},
            #{phone},
            #{email},
            #{imgUrl},
            #{imgPath},
            #{roleId},
            now(),
            now(),
            #{gender},
            #{birthDate}
        )
    </insert>
